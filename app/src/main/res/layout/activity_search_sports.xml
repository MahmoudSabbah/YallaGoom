<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yallagoom.activity.SearchSportsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_f6f7f9"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:paddingBottom="@dimen/_10sdp"

        android:paddingTop="@dimen/_25sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <com.yallagoom.font.Roboto_Medium
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/filter_header_lay"
                android:layout_centerVertical="true"
                android:text="@string/ok"
                android:textColor="@drawable/pressed_f6f7f9"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/filter_header_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toEndOf="@+id/ok"
                android:layout_toLeftOf="@+id/cancel"
                android:layout_toRightOf="@+id/ok"
                android:layout_toStartOf="@+id/cancel"
                android:background="@drawable/layout_bg_radius_search"
                android:paddingBottom="@dimen/_7sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_7sdp">

                <com.yallagoom.font.TextAwesome
                    android:id="@+id/filter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:text="@string/fa_search"
                    android:textColor="@color/color_615e5e"
                    android:textSize="@dimen/_15sdp" />

                <com.yallagoom.font.Roboto_Light_EditText
                    android:id="@+id/search_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/filter_icon"
                    android:layout_toRightOf="@+id/filter_icon"
                    android:background="@android:color/transparent"
                    android:hint="@string/enter_sport"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:textColor="@color/color_6a6767"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/_12sdp"

                    />
            </RelativeLayout>

            <com.yallagoom.font.Roboto_Medium
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/filter_header_lay"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/cancel"
                android:onClick="Cancel"
                android:textColor="@drawable/pressed_f6f7f9"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".7dp"
        android:background="@color/color_e2dfdf" />

    <!--  <android.support.v7.widget.RecyclerView
          android:id="@+id/category_list"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/_5sdp"
          android:layout_marginRight="@dimen/_5sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:scrollbars="vertical" />-->
    <ListView
        android:id="@+id/sports_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="vertical" />
</LinearLayout>
