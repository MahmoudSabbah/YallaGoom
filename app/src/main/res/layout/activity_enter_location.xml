<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.yallagoom.activity.SearchCategoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/color_f6f7f9"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:paddingBottom="@dimen/_10sdp"

        android:paddingTop="@dimen/_25sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp">

            <com.yallagoom.font.Roboto_Medium
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/filter_header_lay"
                android:layout_centerVertical="true"
                android:text="@string/ok"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:textColor="@drawable/pressed_f6f7f9"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/filter_header_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toEndOf="@+id/ok"
                android:layout_toLeftOf="@+id/cancel"
                android:layout_toRightOf="@+id/ok"
                android:layout_toStartOf="@+id/cancel"
                android:background="@drawable/layout_bg_radius_search"
                android:paddingBottom="@dimen/_7sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_7sdp">

                <com.yallagoom.font.TextAwesome
                    android:id="@+id/filter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:text="@string/fa_search"
                    android:textColor="@color/color_615e5e"
                    android:textSize="@dimen/_15sdp" />

                <com.yallagoom.font.Roboto_Light_EditText
                    android:id="@+id/search_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/filter_icon"
                    android:layout_toRightOf="@+id/filter_icon"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:hint="@string/location"
                    android:maxLines="1"
                    android:inputType="text"
                    android:scrollHorizontally="true"
                    android:textColor="@color/color_6a6767"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/_12sdp"

                    />
            </RelativeLayout>

            <com.yallagoom.font.Roboto_Medium
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/filter_header_lay"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:text="@string/cancel"
                android:textColor="@drawable/pressed_f6f7f9"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".7dp"
        android:background="@color/color_e2dfdf" />


    <!--  <android.support.v7.widget.RecyclerView
          android:id="@+id/category_list"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="@dimen/_5sdp"
          android:layout_marginRight="@dimen/_5sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:scrollbars="vertical" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_19sdp"
                android:layout_height="@dimen/_44sdp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:src="@drawable/main_marker" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/color_f6f7f9"
            android:scrollbars="vertical" />

    </RelativeLayout>

</LinearLayout>
