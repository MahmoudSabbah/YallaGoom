<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/small_circle"
        android:layout_width="@dimen/_7sdp"
        android:layout_height="@dimen/_7sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_shap_color_dedede">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view1_lay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/linear_root"
        android:layout_centerHorizontal="true">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/color_eaeaea"
            android:minHeight="@dimen/_80sdp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".45">

            <RelativeLayout
                android:id="@+id/mes_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toLeftOf="@+id/image_arrow_left_lay"
                    android:clickable="false"
                    android:focusable="false"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="4.0dip"
                    app:cardElevation="2.0sp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="0.0dip">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rectangle"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.yallagoom.font.Roboto_Regular
                            android:id="@+id/time_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:text="50"
                            android:textColor="@color/color_e1000000"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/view_left"
                            android:layout_width="0.2dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/text_message_left"
                            android:layout_alignTop="@+id/text_message_left"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_toEndOf="@+id/time_left"
                            android:layout_toRightOf="@+id/time_left"
                            android:background="@color/black"
                            android:visibility="visible" />

                        <com.yallagoom.font.Roboto_Regular
                            android:id="@+id/text_message_left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_toEndOf="@+id/view_left"
                            android:layout_toRightOf="@+id/view_left"
                            android:gravity="center"
                            android:maxLines="2"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_2sdp"
                            android:paddingRight="@dimen/_2sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:text="Mahmoud"
                            android:textColor="@color/color_80000000"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            <RelativeLayout
                android:id="@+id/image_arrow_left_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="-3dp">

                <ImageView
                    android:id="@+id/image_arrow"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:background="@drawable/icon_arrow_down_xml"
                    android:rotation="-90" />
            </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/action"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_shap_color_dedede"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_start_game" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".45">

            <RelativeLayout
                android:id="@+id/mes_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/image_arrow_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="-3dp">

                    <ImageView
                        android:id="@+id/image_arrow2"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/icon_arrow_down_xml"
                        android:rotation="90" />
                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/image_arrow_lay"
                    android:clickable="false"
                    android:focusable="false"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="4.0dip"
                    app:cardElevation="2.0sp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="0.0dip">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rectangle"
                        android:orientation="horizontal">

                        <com.yallagoom.font.Roboto_Regular
                            android:id="@+id/text_message_right"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_toLeftOf="@+id/view"
                            android:gravity="center"
                            android:maxLines="3"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_2sdp"
                            android:paddingRight="@dimen/_2sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:text="Mahmoud "
                            android:textColor="@color/color_80000000"
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="0.2dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/text_message_right"
                            android:layout_alignTop="@+id/text_message_right"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_toLeftOf="@+id/time_right"
                            android:background="@color/black"
                            android:visibility="visible" />

                        <com.yallagoom.font.Roboto_Regular
                            android:id="@+id/time_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingRight="@dimen/_3sdp"
                            android:text="50"
                            android:textColor="@color/color_e1000000"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/view2_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_root"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="@dimen/_17sdp"
            android:layout_centerHorizontal="true"
            android:background="@color/color_eaeaea" />

        <RelativeLayout
            android:layout_width="@dimen/_7sdp"
            android:layout_height="@dimen/_7sdp"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_shap_color_dedede">

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/text_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2_lay"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone">

        <com.yallagoom.font.Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="HALF TIME"
            android:textColor="@color/color_e1000000"
            android:textSize="@dimen/_12sdp" />
    </RelativeLayout>
</RelativeLayout>