<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:id="@+id/parent"
    android:background="@color/white_color"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/small_circle"
        android:layout_width="@dimen/_5sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_shap_color_dedede">

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/view1_lay"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/linear_root"
        android:layout_centerHorizontal="true">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:minHeight="@dimen/_95sdp"
            android:background="@color/color_eaeaea" />


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linear_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".45">
            <RelativeLayout
                android:id="@+id/mes_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/image_arrow"
                    android:background="@drawable/bg_rectangle"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:minHeight="@dimen/_35sdp">
                    <com.yallagoom.font.Roboto_Regular
                        android:id="@+id/time_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:minHeight="@dimen/_35sdp"
                        android:textStyle="bold"
                        android:textColor="@color/color_e1000000"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:text="50" />
                    <View
                        android:layout_width="0.2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/black"
                        android:visibility="invisible"
                        android:layout_height="30dp"/>
                    <com.yallagoom.font.Roboto_Regular
                        android:id="@+id/text_message_left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center"
                        android:maxLines="3"
                        android:textColor="@color/color_e1000000"
                        android:minHeight="@dimen/_35sdp"
                        android:text="Mahmoud" />

                </LinearLayout>


                <ImageView
                    android:id="@+id/image_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-1.5dp"
                    android:background="@drawable/icon_arrow_down_xml"
                    android:rotation="-90" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/action"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:background="@drawable/circle_shap_color_dedede">
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_start_game"/>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".45">
            <RelativeLayout
                android:id="@+id/mes_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image_arrow2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="-1.5dp"
                    android:background="@drawable/icon_arrow_down_xml"
                    android:rotation="90" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image_arrow2"
                    android:background="@drawable/bg_rectangle"
                    android:orientation="horizontal"
                    android:minHeight="@dimen/_35sdp">

                    <com.yallagoom.font.Roboto_Regular
                        android:id="@+id/text_message_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_2sdp"
                        android:gravity="center"
                        android:textColor="@color/color_e1000000"
                        android:maxLines="3"
                        android:layout_toLeftOf="@+id/view"
                        android:layout_centerVertical="true"
                        android:text="Mahmoud " />
                    <View
                        android:id="@+id/view"
                        android:layout_width="0.2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/black"
                        android:visibility="invisible"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/time_right"
                        android:layout_height="30dp"/>
                    <com.yallagoom.font.Roboto_Regular
                        android:id="@+id/time_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/color_e1000000"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingRight="@dimen/_3sdp"
                        android:text="50" />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/view2_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_root"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <View
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:background="@color/color_eaeaea" />

        <RelativeLayout
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_shap_color_dedede">

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/text_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2_lay"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_10sdp">
        <com.yallagoom.font.Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_e1000000"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_12sdp"
            android:text="HALF TIME"/>
    </RelativeLayout>
</RelativeLayout>