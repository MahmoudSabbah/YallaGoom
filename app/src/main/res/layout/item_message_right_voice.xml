<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.yallagoom.widget.CircularImageView
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/ivUserChat"
        app:civ_border="false"
        android:src="@drawable/default_image_small"
        android:layout_alignBottom="@+id/contentMessageChat" />

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:layout_toLeftOf="@+id/ivUserChat"
        android:layout_toStartOf="@+id/ivUserChat"
        android:id="@+id/contentMessageChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cmv_arrowGravity="end"
        app:cmv_arrowMargin="3dp"
        app:cmv_arrowPosition="right"
        app:cmv_backgroundColor="@color/color_03A9F4"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_contentPadding="2dp"
        app:cmv_cornerRadius="3dp"
        app:cmv_showArrow="true"
       >

        <TextView
            android:id="@+id/user_url_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <FrameLayout
              android:id="@+id/play_audio_lay"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true">


              <ImageButton
                  android:id="@+id/pause_btn_audio"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:background="@color/transparent"
                  android:gravity="center"
                  android:paddingBottom="6dp"
                  android:paddingLeft="6dp"
                  android:paddingRight="6dp"
                  android:paddingTop="6dp"
                  android:visibility="gone"
                  app:srcCompat="@drawable/ic_pause_gray_24dp"
                  tools:ignore="VectorDrawableCompat" />

              <ImageButton
                  android:id="@+id/play_btn_audio"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:background="@color/transparent"
                  android:gravity="center"
                  android:paddingBottom="6dp"
                  android:paddingLeft="6dp"
                  android:paddingRight="6dp"
                  android:paddingTop="6dp"
                  android:visibility="visible"
                  app:srcCompat="@drawable/ic_play_arrow_gray_24dp"
                  tools:ignore="VectorDrawableCompat" />
          </FrameLayout>
          <LinearLayout
              android:id="@+id/seek_lay"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/play_audio_lay"
              android:layout_toEndOf="@+id/play_audio_lay"
              android:layout_centerVertical="true"
              android:layout_gravity="center"
              android:orientation="vertical">

              <SeekBar
                  android:id="@+id/audio_progress_bar"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                 />

              <!-- Timer Display -->

          </LinearLayout>
          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/play_audio_lay"
              android:layout_toEndOf="@+id/play_audio_lay"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_marginBottom="@dimen/_5sdp"
              android:layout_alignLeft="@+id/seek_lay"
              android:layout_alignRight="@+id/seek_lay"
              android:layout_marginLeft="@dimen/_5sdp"
              android:layout_marginRight="@dimen/_5sdp"
              android:layout_below="@+id/seek_lay">
              <!-- Current Duration Label -->
              <com.yallagoom.font.Roboto_Regular
                  android:id="@+id/audio_current_duration"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="left"
                  android:textColor="@color/black_70"
                  android:textSize="12sp"
                  android:text="00:00"
                  android:visibility="visible" />
              <!-- Total Duration Label -->
              <com.yallagoom.font.Roboto_Regular
                  android:id="@+id/audio_total_duration"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="6dp"
                  android:layout_gravity="right"
                  android:textColor="@color/black_70"
                  android:textSize="12sp"
                  android:visibility="visible" />
          </FrameLayout>
      </RelativeLayout>
    </me.himanshusoni.chatmessageview.ChatMessageView>

    <TextView
        android:text="seen"
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/contentMessageChat"
        android:layout_below="@id/contentMessageChat"
        android:layout_marginBottom="25dp"
        android:padding="10dp"
        android:textSize="10sp" />

</RelativeLayout>