<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yallagoom.activity.SplashScreenActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom" />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@+id/bottom"
        android:layout_gravity="bottom"
        app:ci_drawable="@drawable/dot_en"
        app:ci_drawable_unselected="@drawable/dot_de" />

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bt_bg_gradiant">

        <com.andexert.library.RippleView
            rv_centered="true"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center"
            app:rv_type="doubleRipple">

            <TextView
                android:id="@+id/skip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".5"
                android:gravity="center"
                android:text="@string/skip"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />
        </com.andexert.library.RippleView>

        <TextView
            android:id="@+id/next"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />
    </RelativeLayout>

        <TextView
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/bt_bg_gradiant"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/done"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

    <RelativeLayout
        android:id="@+id/splash_imag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_img"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="@dimen/_125sdp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:src="@drawable/logo_big" />

        <com.yallagoom.font.Gilroy_Black
            android:id="@+id/logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="YallaGoom"
            android:textColor="@color/color_fcfcfc"
            android:textSize="@dimen/_30sdp" />

        <!--
                <com.mursaat.extendedtextview.AnimatedGradientTextView
                    android:id="@+id/logo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/logo"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_fcfcfc"
                    android:textSize="@dimen/_35sdp"
                    android:text="YallaGoom"
                    app:colors="@array/funny_colors"
                    app:simultaneousColors="2"
                    app:speed="10000"
                    app:angle="0"
                    android:layout_marginTop="@dimen/_20sdp" />
        -->
    </RelativeLayout>
</RelativeLayout>
