<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f5f5f5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:background="@drawable/find_friends_radius_search"
            android:gravity="center"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingTop="@dimen/_7sdp">

            <com.yallagoom.font.TextAwesome
                android:id="@+id/search_icon_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:text="@string/fa_search"
                android:textColor="@color/color_8c8c8c"
                android:textSize="@dimen/_14sdp" />

            <com.yallagoom.font.Roboto_Reqular_EditText
                android:id="@+id/search_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/search_icon_"
                android:layout_toRightOf="@+id/search_icon_"
                android:background="@null"
                android:ellipsize="end"
                android:hint="@string/search_small"
                android:inputType="text"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:textColor="@color/color_8c8c8c"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/color_e2dfdf" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            app:srlAccentColor="@color/color_178d8e"
            app:srlEnableHeaderTranslationContent="false"
            app:srlEnableLoadmore="false"
            app:srlEnableRefresh="true"
            app:srlPrimaryColor="@color/color_f6f7f9">

            <com.scwang.smartrefresh.header.WaveSwipeHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fast_scroller_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="@dimen/_7sdp"
                android:scrollbars="vertical"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp">

            <com.yallagoom.widget.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/multiple_actions_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                fab:fab_addButtonColorNormal="@color/color_df488a"
                fab:fab_addButtonColorPressed="@color/color_df488a"
                fab:fab_addButtonPlusIconColor="@color/white_color"
                fab:fab_addButtonSize="normal"
                fab:fab_expandDirection="left">

                <com.yallagoom.widget.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="@color/color_df488a"
                    fab:fab_colorPressed="@color/white_color"
                    app:fab_icon="@drawable/search_icon"
                    fab:fab_size="mini" />

                <com.yallagoom.widget.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fab_icon="@drawable/mobile_icon"
                    android:scaleType="centerCrop"
                    fab:fab_colorNormal="@color/color_df488a"
                    fab:fab_colorPressed="@color/white_color"
                    fab:fab_size="mini"
                    fab:fab_title="Click to remove" />


            </com.yallagoom.widget.floatingactionbutton.FloatingActionsMenu>

            <com.yallagoom.font.TextAwesome
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_17sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:paddingBottom="@dimen/_7sdp"
                android:textColor="@color/white_color"
                android:text="@string/user_plus"
                android:textSize="@dimen/_20sdp" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout><!--
<in.myinnos.alphabetsindexfastscrollrecycler.IndexFastScrollRecyclerView-->
