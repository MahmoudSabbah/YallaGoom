<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.yallagoom.widget.CircularImageView
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/ivUserChat"
        app:civ_border="false"
        android:src="@drawable/default_image_small"
        android:layout_alignBottom="@+id/contentMessageChat" />

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:layout_toLeftOf="@+id/ivUserChat"
        android:layout_toStartOf="@+id/ivUserChat"
        android:id="@+id/contentMessageChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cmv_arrowGravity="end"
        app:cmv_arrowMargin="3dp"
        app:cmv_arrowPosition="right"
        app:cmv_backgroundColor="@color/color_03A9F4"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_contentPadding="2dp"
        app:cmv_cornerRadius="3dp"
        app:cmv_showArrow="true"
       >
<!--
        <ImageView
            android:id="@+id/img_chat"
            android:maxWidth="150dp"
            android:maxHeight="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->
        <TextView
            android:id="@+id/user_url_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/img_chat"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:src="@drawable/default_image_small"
            android:maxWidth="@dimen/_160sdp"
            android:maxHeight="@dimen/_160sdp"
            android:scaleType="centerCrop"
            app:sriv_border_color="#008fea"
            app:sriv_border_width="0dip"
            app:sriv_left_bottom_corner_radius="5dip"
            app:sriv_left_top_corner_radius="5dip"
            app:sriv_oval="false"
            app:sriv_right_bottom_corner_radius="5dip"
            app:sriv_right_top_corner_radius="5dip" />
    </me.himanshusoni.chatmessageview.ChatMessageView>

    <TextView
        android:text="seen"
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/contentMessageChat"
        android:layout_below="@id/contentMessageChat"
        android:layout_marginBottom="25dp"
        android:padding="10dp"
        android:textSize="10sp" />

</RelativeLayout>