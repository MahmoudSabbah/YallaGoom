<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/circle_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_35sdp"
            android:minWidth="@dimen/_35sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_shap_select">

            <com.yallagoom.font.Roboto_Regular
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="12"
                android:textColor="@color/white_color"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <com.yallagoom.font.Roboto_Regular
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May be"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/circle_lay"
            android:textColor="@color/color_993e3b3b"
            android:textSize="@dimen/_11sdp" />
    </RelativeLayout>


</RelativeLayout>