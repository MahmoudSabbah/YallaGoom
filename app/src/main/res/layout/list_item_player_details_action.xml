<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pressed_bg_transparent"
        android:paddingBottom="@dimen/_7sdp"
        android:paddingLeft="@dimen/_13sdp"
        android:paddingRight="@dimen/_13sdp"
        android:paddingTop="@dimen/_7sdp">

        <com.yallagoom.font.Roboto_Regular
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="a"
            android:textColor="@color/black_50_op"
            android:textSize="@dimen/_11sdp"
            android:textStyle="normal" />

        <com.yallagoom.font.Roboto_Regular
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_shap_select"
            android:gravity="center"
            android:text="1"
            android:minHeight="@dimen/_20sdp"
            android:minWidth="@dimen/_20sdp"
            android:textColor="@color/white_color"
            android:textSize="@dimen/_10sdp" />


    </RelativeLayout>

    <View
        android:id="@+id/_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:background="@color/color_33000000" />
</LinearLayout>