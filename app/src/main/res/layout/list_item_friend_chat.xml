<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/pressed_bg_transparent"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingTop="@dimen/_8sdp">
        <com.yallagoom.widget.CircularImageView
            android:id="@+id/image_friend"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/default_image"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerVertical="true"
            app:civ_border_width="0sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_friend"
            android:layout_toEndOf="@+id/image_friend"
            android:layout_toLeftOf="@+id/checkbox_select"
            android:layout_toStartOf="@+id/checkbox_select"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp">
            <com.yallagoom.font.Roboto_Regular
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="friend"
                android:textColor="@color/black_50_op"
                android:textSize="@dimen/_11sdp" />

        </RelativeLayout>

        <com.yallagoom.widget.SmoothCheckBox.SmoothCheckBox
            android:id="@+id/checkbox_select"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_17sdp"
            android:layout_marginRight="@dimen/_17sdp"
            app:color_checked="@color/color_178d8e" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:background="@color/color_33000000" />
</LinearLayout>