<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    android:orientation="vertical">

        <com.yallagoom.font.Roboto_Medium
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/color_f9f9f9"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingStart="@dimen/_15sdp"
            android:paddingTop="@dimen/_7sdp"
            android:text="@string/international"
            android:textColor="@color/color_black_73"
            android:textSize="@dimen/_11sdp"
            android:textStyle="normal" />

        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pressed_bg_transparent"
            android:paddingBottom="@dimen/_8sdp"
            android:paddingTop="@dimen/_8sdp">

            <com.yallagoom.font.Roboto_Regular
                android:id="@+id/value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toLeftOf="@+id/arraw"
                android:layout_toStartOf="@+id/arraw"
                android:text="World"
                android:textColor="@color/black_50_op"
                android:textSize="@dimen/_11sdp" />

            <com.yallagoom.font.TextAwesome
                android:id="@+id/arraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_17sdp"
                android:layout_marginRight="@dimen/_17sdp"
                android:text="@string/fa_chevron_right_left"
                android:textColor="@color/color_b5b4b4"
                android:textSize="@dimen/_15sdp" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:background="@color/color_33000000" />

</LinearLayout>