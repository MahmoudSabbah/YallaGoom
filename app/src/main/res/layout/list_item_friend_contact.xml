<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/contact_icon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toEndOf="@+id/contact_icon"
            android:layout_toLeftOf="@+id/add_friend"
            android:layout_toRightOf="@+id/contact_icon"
            android:layout_toStartOf="@+id/add_friend">

            <com.yallagoom.font.Roboto_Regular
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="Mahmoud Sabbah"
                android:textColor="@color/color_black_72"
                android:textSize="@dimen/_11sdp" />

        </RelativeLayout>

        <com.yallagoom.font.Roboto_Regular
            android:id="@+id/add_friend"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:background="@drawable/selected_radius_df488a_radius_white"
            android:gravity="center"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_7sdp"
            android:text="@string/invite_to_app"
            android:textColor="@drawable/select_8e9093_white_text_color"
            android:textSize="@dimen/_11sdp" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_below="@+id/main"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/color_e2dfdf" />
</RelativeLayout>