<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.yallagoom.widget.CircularImageView
        android:layout_alignBottom="@+id/contentMessageChat"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:civ_border="false"
        android:src="@drawable/default_image_small"
        android:id="@+id/ivUserChat" />

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/contentMessageChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cmv_backgroundColor="@color/grey_200"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_arrowGravity="end"
        app:cmv_arrowPosition="left"
        app:cmv_cornerRadius="3dp"
        app:cmv_showArrow="true"
        app:cmv_contentPadding="2dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivUserChat">
        <TextView
            android:id="@+id/user_url_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />
        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/img_chat"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_160sdp"
            android:src="@drawable/default_image_small"
            android:maxWidth="@dimen/_160sdp"
            android:maxHeight="@dimen/_160sdp"
            android:scaleType="centerCrop"
            app:sriv_border_color="#008fea"
            app:sriv_border_width="0dip"
            app:sriv_left_bottom_corner_radius="5dip"
            app:sriv_left_top_corner_radius="5dip"
            app:sriv_oval="false"
            app:sriv_right_bottom_corner_radius="5dip"
            app:sriv_right_top_corner_radius="5dip" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tvLocation"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/img_chat"
            android:textSize="10sp"
            android:text="Localização Recebida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>

    </me.himanshusoni.chatmessageview.ChatMessageView>

    <TextView
        android:text="seen"
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:textSize="10sp"
        android:layout_below="@+id/contentMessageChat"
        android:layout_toEndOf="@+id/ivUserChat" />
</RelativeLayout>